using Gtk 4.0;
using Adw 1;

template $OnesWindow: Adw.ApplicationWindow {
  title: _("Ones");
  //default-width: 800;
  default-height: 600;

  content: Adw.ToolbarView {
    [top]
    Adw.HeaderBar {
      [end]
      MenuButton {
        primary: true;
        icon-name: "open-menu-symbolic";
        tooltip-text: _("Main Menu");
        menu-model: primary_menu;
      }
    }


// this is possibly the most unnecessary and redundant code every written, but I'm learning blueprint okay
Box Main {
  orientation: vertical;
  valign: center;
  halign: center;

  FlowBox MainText {
    selection-mode: none;
    name: "MainText";
    halign: center;
    Image {
      pixel-size: 128;
      icon-name: "xyz.desyncd.Ones";
    }
    Label {
      label: _("\nBasic ASCII <--> Binary Converter\n\n");
    }
  }

  FlowBox BinaryInput {
    halign: center;
    selection-mode: none;
    Label {
      label: _("Text Input");
    }

    Entry Ascii {
      placeholder-text: "Text";
    }

    Label {
      label: _("Binary");
    }

    Entry Binary {
      placeholder-text: "Binary";
      //columns: 20;
    }
  }
}

  };
}

menu primary_menu {
  section {
    item {
      label: _("_Preferences");
      action: "app.preferences";
    }

    item {
      label: _("_Keyboard Shortcuts");
      action: "win.show-help-overlay";
    }

    item {
      label: _("_About Ones");
      action: "app.about";
    }
  }
}