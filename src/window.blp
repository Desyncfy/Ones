using Gtk 4.0;
using Adw 1;

template $OnesWindow: Adw.ApplicationWindow {
  title: _("Ones");
  default-height: 600;

  content: Adw.ToolbarView {
    [top]
    Adw.HeaderBar {
      [end]
      MenuButton {
        primary: true;
        icon-name: "open-menu-symbolic";
        tooltip-text: _("Main Menu");
        menu-model: primary_menu;
      }
    }


// this is possibly the most unnecessary and redundant code every written, but I'm learning blueprint okay
Box Main {
  orientation: vertical;
  valign: center;
  halign: center;

  FlowBox MainText {
    selection-mode: none;
    name: "MainText";
    halign: center;
    Image {
      pixel-size: 128;
      icon-name: "xyz.desyncd.Ones";
    }
    Label {
      label: _("\nBasic ASCII â†” Binary Converter\n\n");
    }
  }

  FlowBox BinaryInput {
    halign: center;
    selection-mode: none;

    Label {
      label: _("Text Input");
      width-request: 300; // so this seems to make everything else take the same size.
    }

    Entry Ascii {
      placeholder-text: "Text";
    }

    Button AsciiButton {
      name: "Ascii";
      label: _("Text to Binary");
      styles [
        "suggested-action"
      ]
    }

    Label {
      label: _("Binary");
    }

    Entry Binary {
      placeholder-text: "Binary";
    }

    Button BinaryButton {
      name: "Binary";
      label: _("Binary to Text");
    }
  }
}

  };
}

menu primary_menu {
  section {
    item {
      label: _("_About Ones");
      action: "app.about";
    }
  }
}